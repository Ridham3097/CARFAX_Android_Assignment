<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".DetailsActivity">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/car" />

    <RelativeLayout
        android:id="@+id/carInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        >


        <TextView
            android:id="@+id/txtYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="2011"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/txtMake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtYear"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"
        android:text="BMW" />

    <TextView
        android:id="@+id/txtModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtMake"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"
        android:text="Series 3" />

    <TextView
        android:id="@+id/txtTrim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtModel"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"
        android:text="32k" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/carParamater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carInfo"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$11,120"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtMileage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/txtPrice"
            android:text="| 32.1k mi"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/carParamater"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/gray" />
    <RelativeLayout
        android:id="@+id/info"
        android:layout_below="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp">
        <TextView
            android:id="@+id/txtInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Information"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"/>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtInfo"

            >
            <TableRow>
                <TextView
                    android:id="@+id/txtLocation"
                    android:text="Location"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/location"
                    android:text="New York, NY"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginStart="40dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/txtExteriorColor"
                    android:text="Exterior Color"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/exteriorColor"
                    android:text="Blue"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="40dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/txtInteriorColor"
                    android:text="Interior Color"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/interiorColor"
                    android:text="Black"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="40dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/txtDriveType"
                    android:text="Drive Type"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/driveType"
                    android:text="FWD"
                    android:textSize="18dp"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/black"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/txtTransmission"
                    android:text="Transmission"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/transmission"
                    android:text="Automatic"
                    android:textSize="18dp"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/black"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/txtBodyColor"
                    android:text="Body Style"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/bodyStyle"
                    android:text="Sedan"
                    android:textSize="18dp"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/black"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/txtEngine"
                    android:text="Engine"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/engine"
                    android:text="4 cyl 2.4L"
                    android:textSize="18dp"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/black"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/txtFuel"
                    android:text="Fuel"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/fuel"
                    android:text="Gasoline"
                    android:textSize="18dp"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/black"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
    <View
        android:id="@+id/line2"
        android:layout_below="@+id/info"
        android:layout_width="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_height="5dp"
        android:background="@color/gray"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:text="CALL DEALER" />


</RelativeLayout>